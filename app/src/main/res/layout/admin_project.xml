<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="io.github.isubham.myapplication.admin_project">



    <!--project details-->
<android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">
 <LinearLayout
     android:padding="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_project_name"
            android:textSize="20dp"
            android:text="Project name"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_project_start_date"
                android:layout_weight="1"
                android:text="start date"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_project_end_date"
            android:layout_weight="1"
            android:text="end date"
            />

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_project_id"
                android:text="project_id"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:text="View Users"
                android:textColor="#0000ff"
                android:layout_weight="1"
                android:onClick="view_users"
                ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Add Users"
                    android:textColor="#0000ff"
                    android:onClick="add_users"
                    ></TextView>


            </LinearLayout>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Manpower"
                android:textColor="#0000ff"
                android:onClick="view_manpower"
                ></TextView>

 </LinearLayout>
 </LinearLayout>
</android.support.v7.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shifts"
        android:textAllCaps="true"
        android:textColor="#0000ff"
        android:padding="8dp"
        />


    <!--list of shifts-->

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_p_shift_recycleview"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"

        >


    </android.support.v7.widget.RecyclerView>

</LinearLayout>
