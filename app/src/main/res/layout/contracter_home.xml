<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="io.github.isubham.myapplication.contracter_home">

    <!--profile info-->
    <!--name-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="0.9"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000ff"
                android:text="Contracter name"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/contracter_home_contracter_name"
                android:layout_height="wrap_content"
                android:text="Contracter name"
                android:textSize="20sp" />

            <!--email-->
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#0000ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contracter email"
                android:textSize="16sp" />

            <!--email-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contracter_home_contracter_email"
                android:text="Contracter email"
                android:textSize="16sp" />

            <!--account type-->
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#0000ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contracter Aadhar"
                 />

            <!--account type-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contracter Aadhar"
                android:id="@+id/contracter_home_contracter_user_aadhar"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:onClick="contracter_add_manpower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="+ Manpower"
                    android:backgroundTint="#0000ff"
                    android:textColor="#ffffff"
                    />

                <Button

                    android:padding="8dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:onClick="contracter_view_manpower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Manpower"
                    android:backgroundTint="#0000ff"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:src="@drawable/contracter"
            />

    </LinearLayout>


    <!--list of project-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/hc_project_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
