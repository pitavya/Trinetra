<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="io.github.isubham.myapplication.contracter_home">

    <!--profile info-->
    <!--name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contracter name"
            android:textSize="20sp" />

        <!--email-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contracter email"
            android:textSize="16sp" />

        <!--account type-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contracter icon"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="contracter_add_manpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:text="+ Manpower"
            android:textColor="#0000ff"
            />

        <TextView

            android:padding="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="contracter_view_manpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Manpower"
            android:textColor="#0000ff"
            />

        </LinearLayout>

    </LinearLayout>

    <!--list of project-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/hc_project_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
