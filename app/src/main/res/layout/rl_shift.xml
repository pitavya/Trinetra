<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:padding="8dp"
            android:layout_weight="7"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_s_contracter_name"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Contractror name"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_s_datetime"
            android:layout_weight="2"
            android:text="datetime"

            />

        </LinearLayout>
        <TextView

            android:paddingTop="16dp"
            android:paddingBottom="16dp"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work on site"
            android:id="@+id/rl_s_shift_description"

            />

            <!--
            TODO : in future version show % in these

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_s_attendence_data"
                android:layout_weight="1"
                android:text="attendence data"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_s_authentication_date"
            android:layout_weight="1"
            android:text="auth data"
            />

        </LinearLayout>

        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_s_detail_attendence_data"
                android:layout_weight="1"
                android:textColor="#0000ff"
                android:text="Attendence detail"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_s_detail_authentication_data"
            android:layout_weight="1"
            android:textColor="#0000ff"
            android:text="Authentication detail"
            />

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_s_contracter_id"
                android:text="contracter_id"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_s_shift_id"
                android:text="shift_id"
                />
 </LinearLayout>

</android.support.v7.widget.CardView>