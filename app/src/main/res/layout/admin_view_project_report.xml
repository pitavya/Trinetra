<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.isubham.myapplication.admin_view_project_report">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#0000ff"
        android:text="Project Report"
        android:gravity="center"
        android:textSize="16dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:background="#ffffff"
        android:layout_weight="0.8"
        android:text="Pick Date"
        android:onClick="pick_date"
        android:layout_width="wrap_content"
        android:id="@+id/admin_view_report_pick_date"
        android:layout_height="wrap_content" />

     <Button
         android:text="Fetch "
         android:onClick="fetch_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/project_report_string"
        android:gravity="center"
        android:textSize="50dp"
        />

</LinearLayout>
