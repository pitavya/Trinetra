<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.isubham.myapplication.home">

    <Button
        android:text="Sign In"
        android:onClick="open_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Create Account"
        android:onClick="open_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Open Admin"
        android:onClick="open_admin_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Open Contracter"
        android:onClick="open_contractor_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Open Admin Create Project"
        android:onClick="open_admin_create_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>
