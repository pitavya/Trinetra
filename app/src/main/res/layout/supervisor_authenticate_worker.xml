<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.isubham.myapplication.supervisor_authenticate_worker">

    <!--fetch worker detail of the worker_id with name,



    and fingerprint-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authenticate worker"
        android:gravity="center"
        android:padding="8dp"
        android:background="#efefef"
        android:layout_marginBottom="8dp"
        />

   <android.support.v7.widget.CardView android:layout_width="match_parent"

    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">
 <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

     <ImageView
         android:padding="4dp"
         android:layout_weight="1"
         android:src="@mipmap/ic_launcher"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingTop="4dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/s_a_w_worker_name"
            android:text="Worker name"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/s_a_w_worker_type"
                android:layout_weight="1"
                android:text="Skilled Temporary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/s_a_w_worker_aadhar_id"
            android:layout_weight="1"
            android:text="worker aadhar"
            />

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/s_a_w_worker_id"
                android:text="worker id"
                />
 </LinearLayout>
 </LinearLayout>

   </android.support.v7.widget.CardView>


    <!--scan -->
    <ImageView
        android:layout_marginTop="16dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fp"
        />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan"
        android:onClick="scan"
        />

     <Button
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
         android:onClick="submit"
         android:backgroundTint="#efefef"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s_a_w_text_event_log"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s_a_w_lbl_message"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s_a_w_worker_fingerprint_image_view"
        />

</LinearLayout>
