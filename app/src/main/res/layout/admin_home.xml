<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.isubham.myapplication.admin_home">

    <!--profile info-->
    <!--name-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="0.9"
            >

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#0000ff"
                android:layout_height="wrap_content"
                android:text="Admin name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Admin name"
                android:id="@+id/admin_home_admin_name"
                android:textSize="20sp" />

            <!--email-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000ff"
                android:text="Admin email"
                />

            <!--email-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin email"
                android:id="@+id/admin_home_admin_email"
                android:textSize="16sp" />

            <!--account type-->
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="#0000ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Aadhar"
                />

            <!--account type-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Aadhar"
                android:id="@+id/admin_home_admin_aadhar"
                android:textSize="16sp" />


            <Button

                android:paddingTop="10dp"

                android:paddingBottom="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="to_add_new_project"
                android:text="+ New Project"
                android:backgroundTint="#0000ff"
                android:textColor="#ffffff"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="8dp"
                android:src="@drawable/admin"
                />
        </LinearLayout>

    </LinearLayout>

    <!--list of project-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ha_project_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>
