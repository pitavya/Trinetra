<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="io.github.isubham.myapplication.contracter_assign_supervisor">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assign Supervisor to Package"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textSize="20dp"
        android:textColor="#0000ff"
        android:layout_margin="8dp"
        />

  <LinearLayout
      android:layout_margin="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/supervisor"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="#0000ff"
            android:text="TO"
            />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/box"
        />




    </LinearLayout>

    <!--admin email-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_supervisor_email"
        android:hint="Supervisor email"
        />

    <!--click button to add-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="add_new_supervisor_in_package"
        android:text="Add Supervisor"
        android:backgroundTint="#0000ff"
        android:textColor="#ffffff"
        />


</LinearLayout>
